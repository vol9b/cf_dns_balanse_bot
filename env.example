# Пример заполнения .env

# Cloudflare
CLOUDFLARE_API_TOKEN=cf_example_token_abc123
# Поддержка нескольких зон через запятую
CF_ZONE_ID=example_zone_id_1234567890abcdef,another_zone_id_abcdef1234567890
CF_HOSTNAME=app.example.com,api.example.com,cdn.example.com
CF_RECORD_TYPES=A
CF_PROXIED=true

# Пинги и антифлап (оптимизировано для быстрого восстановления)
PING_INTERVAL_SECONDS=10
CF_SYNC_INTERVAL_MINUTES=3
FLAP_THRESHOLD=3
FLAP_UP_THRESHOLD=2
FLAP_DOWN_THRESHOLD=3

# Управление и хранилище
CF_MANAGE_DNS=true
CF_DB_PATH=./cf_dns.db

# Telegram
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789


